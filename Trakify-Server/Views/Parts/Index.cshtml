@{
    ViewData["Title"] = "Index";
}

<script src="~/js/Parts.js"></script>
<div id="divParts">

</div>
@*Hidden Fields*@
<input type="hidden" id="hdPartsID" />
<div id="PartForm" class="modal fade" role="dialog" style="z-index:99999 !important;overflow-y:scroll !important;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="margin-left:45%" id="headerContractForm">Create</h4>
                <button type="button" class="btn btn-danger" data-dismiss="modal">X</button>
            </div>
            <div class="modal-body">
                <form id="cities-form" action="#" method="post">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Category</label>
                            <div class="col-md-10">
                                <select id="PartFormCategory" class="form-control"> </select>
                                @*<a href="@Url.Action("PartCategory", "Parts")" class="elements">Add New Category</a>*@
                                <button class="btn btn-primary col-md-7" id="m" type="button" onclick="Parts.OpenCategoryPopup()">Add New Category</button>
                                <span class="text-danger" id="spnddPartVendor"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Quantity</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartQuantity" placeholder="Quantity" />
                                <span id="spnQuantity" class="text-danger"></span>
                                <span class="text-danger" id="spnCity"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Serialized</label>
                            <div class="col-md-10">
                                <label class="radio-inline" style="padding:2px !important">
                                    <input type="radio" name="SerializedPart" id="SerializedPartYes" value="true" style="vertical-align:middle"> Yes
                                </label>
                                <label class="radio-inline" style="padding:2px !important">
                                    <input type="radio" name="SerializedPart" id="SerializedPartYes" value="false" style="vertical-align:middle"> No
                                </label>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <label class="control-label col-md-2">Serial</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartSerial" placeholder="Serial" />
                                <span id="spnSerial" class="text-danger"></span>
                                <span class="text-danger" id="spnSerial"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Name</label>
                            <div class="col-md-10">
                                <input class="form-control" id="PartName" placeholder="Name" />
                                <span class="text-danger" id="spnName"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Brand</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartBrand" placeholder="Brand" />
                                <span class="text-danger" id="spnBrand"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Location</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartLocation" placeholder="Location" />
                                <span class="text-danger" id="spnLocation"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Description</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartDescription" placeholder="Description" />
                                <span class="text-danger" id="spnDescription"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Supplier</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartSupplier" placeholder="Supplier" />
                                <span class="text-danger" id="spnSupplier"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Cost</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartCost" placeholder="Cost" />
                                <span class="text-danger" id="spnCost"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">MinimumReorderLevel</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartMinimumReorderLevel" placeholder="MinimumReorderLevel" />
                                <span class="text-danger" id="spnMinimumReorderLevel"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="control-label col-md-2">Markup</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartMarkup" placeholder="Markup" />
                                <span class="text-danger" id="spnMarkup"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label class="control-label col-md-2">Color</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartColor" placeholder="Color" />
                                <span class="text-danger" id="spnColor"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="control-label col-md-2">SpiffAmount</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartSpiffAmount" placeholder="SpiffAmount" />
                                <span class="text-danger" id="spnSpiffAmount"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="control-label col-md-2">PartPhoto</label>
                        <div class="col-md-10">
                            <div id="msg"></div>
                            <input type="file" name="img[]" id="PartFileUpload" class="file" accept="image/*">
                            <input type="hidden" id="PartHiddenFileUploadPath" />
                            <div id="photopath" class="input-group">
                                <input type="text" class="form-control" disabled placeholder="Upload File" id="file">
                                <div class="input-group-append">
                                    <button type="button" class="browse btn btn-primary">Browse...</button>
                                </div>
                            </div>
                            <div class="col-md-9" style="margin-top:1px !important">
                                <img src="https://placehold.it/80x80" id="preview" class="img-thumbnail">
                            </div>
                        </div>
                    </div>
                </form>
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title" style="margin-left:35%" id="headerContractForm">Vendors Details:</h4>
                    </div>
                    <div class="row form-group">

                        <div class="col-md-4">
                            <label class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <select id="PartFormVendor" class="form-control"> </select>
                                <span class="text-danger" id="spnddPartVendor"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartCost" placeholder="0.00" />
                                <span class="text-danger" id="spnPartCost"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="PartNumber" placeholder="Part Number" />
                                <span class="text-danger" id="spnPartNumber"></span>
                            </div>
                        </div>
                    </div>
                    <p>
                        <input type="button" class="btn btn-dark" value="Add" id="submitVendor" onclick="Contracts.OpenPopUp()">
                    </p>
                </form>

            </div>
            <div class="modal-footer">
                <span class="error"></span>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="sub" type="button" class="btn btn-info" onclick="Parts.Save()">Create</button>
            </div>
        </div>
    </div>
</div>
<style>

    #submitVendor {
        border-radius: 50%;
    }
</style>

@Html.Partial("_PartCategory")